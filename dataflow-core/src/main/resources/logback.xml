<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <!-- ============================================ -->
    <!-- APPENDERS -->
    <!-- ============================================ -->

    <!-- Console Appender -->
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{yyyy-MM-DD HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- File Appender -->
    <appender name="FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>logs/dataflow-platform.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <!-- Daily rollover -->
            <fileNamePattern>logs/dataflow-platform.%d{yyyy-MM-dd}.log</fileNamePattern>
            <!-- Keep 30 days of history -->
            <maxHistory>30</maxHistory>
            <!-- Maximum size of all logs -->
            <totalSizeCap>10GB</totalSizeCap>
        </rollingPolicy>
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- Async Appender for better performance -->
    <appender name="ASYNC-FILE" class="ch.qos.logback.classic.AsyncAppender">
        <queueSize>500</queueSize>
        <discardingThreshold>0</discardingThreshold>
        <appender-ref ref="FILE" />
    </appender>

    <!-- ============================================ -->
    <!-- LOGGER CONFIGURATION -->
    <!-- ============================================ -->

    <!-- Dataflow application logs -->
    <logger name="com.dataflow" level="DEBUG" />

    <!-- Pekko logs -->
    <logger name="org.apache.pekko" level="INFO" />
    <logger name="org.apache.pekko.actor" level="INFO" />
    <logger name="org.apache.pekko.cluster" level="INFO" />
    <logger name="org.apache.pekko.persistence" level="INFO" />
    <logger name="org.apache.pekko.remote" level="WARN" />

    <!-- Cassandra driver logs -->
    <logger name="com.datastax.driver" level="WARN" />
    <logger name="com.datastax.oss.driver" level="WARN" />

    <!-- HTTP logs -->
    <logger name="org.apache.pekko.http" level="INFO" />

    <!-- Reduce noise from specific components -->
    <logger name="org.apache.pekko.cluster.Cluster" level="INFO" />
    <logger name="org.apache.pekko.cluster.ClusterHeartbeat" level="WARN" />

    <!-- Root logger -->
    <root level="INFO">
        <appender-ref ref="CONSOLE" />
        <appender-ref ref="ASYNC-FILE" />
    </root>
</configuration>
